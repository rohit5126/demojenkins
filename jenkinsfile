pipeline{
    agent any
    tools {
        maven 'Maven' 
    }    
    stages{
        stage("test"){
            steps{
                // mvn test
                sh 'mvn --version'
                sh 'mvn test'
            }
        }
        stage("build"){
            steps{
                // mvn install
                sh 'mvn install'
                
            }
        }
        stage("test- deploy"){
            steps{
                //deploy on container - tomcat10
                echo ' deploy on test'
            }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}